<div id="aggregations">
  {% if search_response.aggregations%}
  <div class="aggregations-result">
    <div class="agg-header">Price</div>
    {% for agg in search_response.aggregations.regularPrice.buckets %}
      {% if agg.doc_count > 0 %}
        <div class="aggregation">
          <div>
            {% if "filter.name=regularPrice" not in applied_filters %}
            <a href="{{ url_for("search.query") }}?&query={{ query|e }}{{ applied_filters }}&filter.name=regularPrice&regularPrice.type=range&regularPrice.key={{ agg.key }}&regularPrice.from={{ agg.from }}&regularPrice.to={{ agg.to }}&regularPrice.displayName=Price">
            {% endif %}
              {{ agg.key }} {#(${{ agg.from }} TO ${{ agg.to }})#}: {{ agg.doc_count }}
            {% if "filter.name=regularPrice" not in applied_filters %}
            </a>
            {% endif %}
          </div>
        </div>{% endif %}
    {% endfor %}
  </div>
  <div class="aggregations-result">
    <div class="agg-header">Department</div>
    {% for agg in search_response.aggregations.department.buckets %}
      {% if agg.doc_count > 0 %}
        <div class="aggregation">
          <div>
            {% if "filter.name=department" not in applied_filters %}
            <a href="{{ url_for("search.query") }}?&query={{ query|e }}{{ applied_filters }}&filter.name=department&department.type=terms&department.key={{ agg.key }}&department.displayName=Department">
            {% endif %}
              {{ agg.key }} : {{ agg.doc_count }}
            {% if "filter.name=department" not in applied_filters %}
            </a>
            {% endif %}
          </div>
        </div>{% endif %}
    {% endfor %}
  </div>
  <div class="aggregations-result">
    <div class="agg-header">Missing Data</div>
    <div>image: {{ search_response.aggregations.missing_images.doc_count }}</div>
  </div>{% endif %}
</div>
